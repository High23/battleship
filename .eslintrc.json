{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["airbnb-base", "prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "ignorePatterns": ["temp.js", "**test.js"],
    "rules": {
        "no-console": "off",
        "no-plusplus": "off",
        "max-classes-per-file": [
            "error",
            { "ignoreExpressions": true, "max": 2 }
        ]
    }
}
